{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": ["meteor"],
    "extends": ["plugin:meteor/recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "brace-style": [
          2,
          "1tbs",
          { "allowSingleLine": true }
        ],
        "spaced-comment": [
          "error",
          "always",
          { "exceptions": ["-", "+"] }
        ],
        "no-multiple-empty-lines": [
          "error",
          {
            "max": 2,
            "maxBOF": 1
          }
        ],
        "key-spacing": [
          "error",
          { "beforeColon": false }
        ],
        "object-curly-newline": [
          "error",
          { "multiline": true }
        ],
        "indent": [
            "error",
            2
        ],
        "no-console": 1,
        "eol-last": 2,
        "comma-dangle": [
          "error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "never",
            "exports": "always-multiline",
            "functions": "always-multiline"
          }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
